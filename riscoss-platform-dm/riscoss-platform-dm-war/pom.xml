<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>riscoss-platform-dm</artifactId>
    <groupId>eu.riscoss</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>riscoss-platform-dm-war</artifactId>
  <packaging>war</packaging>

  <name>RISCOSS Platform - Domain Manager - WAR</name>

  <properties>
    <xwiki.extension.features>org.xwiki.enterprise:xwiki-enterprise-web</xwiki.extension.features>
    <xwiki.extension.distribution.ui>eu.riscoss:riscoss-platform-ui-mainwiki</xwiki.extension.distribution.ui>
    <xwiki.extension.distribution.wikiui>eu.riscoss:riscoss-platform-ui-wiki</xwiki.extension.distribution.wikiui>
  </properties>

  <dependencies>
      <dependency>
          <groupId>eu.riscoss</groupId>
          <artifactId>riscoss-platform-dm-script</artifactId>
          <version>${project.version}</version>
      </dependency>
    <dependency>
      <groupId>org.xwiki.enterprise</groupId>
      <artifactId>xwiki-enterprise-web</artifactId>
      <version>${xwiki.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-legacy-oldcore</artifactId>
      <version>${xwiki.version}</version>
      <classifier>objectpolicy</classifier>
      <exclusions>
        <exclusion>  <!-- Don't drag all the dependencies otherwise it will put xwiki-platform-oldcore in the final package. We just need this single jar. -->
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>      
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Inject XWiki's configuration (only xwiki.cfg, not hibernate.cfg.xml) -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-remote-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>xwiki-configuration-resources</id>
          </execution>
        </executions>
      </plugin>
        <!-- Don't check for legacy dependency usages since we depend on oldcore for the patch -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-enforcer-plugin</artifactId>
          <executions>
            <execution>
              <id>enforce-no-legacy-dependencies</id>
              <configuration>
                <skip>true</skip>
              </configuration>
            </execution>
          </executions>
        </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <!-- We exclude the oldcore in the overlay expansion so that we have a /target/xwiki-... directory ready to be 
               used as a webapp -->
          <overlays>
            <overlay>
              <groupId>org.xwiki.enterprise</groupId>
              <artifactId>xwiki-enterprise-web</artifactId>
              <excludes>
                <exclude>WEB-INF/lib/xwiki-platform-legacy-oldcore-*.jar</exclude>
              </excludes>
            </overlay>
          </overlays>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>local-repo</id>
      <url>file://${basedir}/patched-jars</url>
    </repository>
  </repositories>
</project>
